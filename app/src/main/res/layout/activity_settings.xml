<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_image"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/person_or_avatar"
        app:civ_border_color="@color/purple_700"
        app:civ_border_width="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:padding="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:hint="Full Name"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/set_image"
        android:drawableLeft="@mipmap/ic_avatar"
        android:drawableStart="@mipmap/ic_avatar"
        android:textColorHint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"/>

    <EditText
        android:id="@+id/set_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:hint="Enter you bio or short cv"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/set_name"
        android:drawableLeft="@mipmap/ic_article"
        android:drawableStart="@mipmap/ic_article"
        android:textColorHint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/set_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Update profile"
        android:textStyle="bold"
        android:textSize="@dimen/_16ssp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/set_bio"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>